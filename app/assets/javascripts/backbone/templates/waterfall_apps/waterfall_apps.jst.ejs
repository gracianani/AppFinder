<div id="app-<%= id %>">
	<div class="media">
		<div class="media-title">
			<div class="app-name media-heading">
				<%= title %>
			</div>
		</div>
		<a class="app-icon pull-left" href="#">
			<% if (icon_url != '') { %>
				<img class='img-rounded' src="assets/<%= icon_url %>" style="width:57px;height:57px" />
			<% } else { %>
				<img src="http://placehold.it/57x57" />
			<% } %>
		</a>
		<div class="media-body">
			
			<div>
				<span class="app-rating"></span>
				<span class="app-ratings-count"> (<%= like_count %>)</span>
			</div>
			
			<div class="app-developer">
				by <a href="#"><%= developer %></a>
			</div>
		</div>
		<div class="clearfix"></div>
	</div><!--/media -->
	<% if (obj.feature) { %>
	<div class="app-ribbonContainer">
			<strong class="app-ribbon
				<% if (obj.feature_type) { %>
	    			 <%= feature_type %>
				<% } %>
				">
	    			 <%= feature %>
			</strong>
	</div><!--/app-priceContainer-->
	<% } %>
	<div class="mosaic-block bar" style= 'height: 
			<%= screenshot_height * 190 / screenshot_width %>px;
	'>
	<div class="app-short-description mosaic-overlay" style="left: 0px;">
		<div class="details">
			<p><%= short_description %> <i class="icon-search icon-white"></i></p>
		</div>
	</div>
	<div class="app-screenshot mosaic-backdrop" >
		<% if (screenshot_url != '') { %>
			<img src="assets/<%= screenshot_url %>" 
			style="max-width:none;
				width:190px;height:auto;
			   
			position: relative;" />
		<% } else { %>
			<img src="http://placehold.it/<%= screenshot_width %>x<%= screenshot_height %>" />
		<% } %>
	</div>
	
	</div>
	<div class="btn-toolbar">

		<a class="btn btn-small btn-install
		<% if (price <= 0.5 ) { %>
    			  btn-free
			<% } %>
		">
		<span class="price">
		<% if (price <= 0.5 ) { %>
    			FREE
			<% } else {  %> 
				$<%= price %>
			<% } %>
		</span>
		<span class="install none">
		Install
		</span>
		</a>
 
		
		
		<div href="javascript:void(0)" class="app-share-btn btn btn-small pull-right">
			<i class="icon-share"></i>
			<div class="menu-share">
				<a href="#"> Facebook </a>
				<a href="#"> Google+ </a>
				<a href="#"> Twitter </a>
				<a href="#"> Pin it! </a>
			</div>	
		</div>
			
	</div>
	
		<div class="app-tags ">
		
		<% for (var i=0; i < tags.length; i++) { %>
			<a class="tag" href="javascript:void(0)"><i class='icon-tag icon-white'></i> <%= tags[i] %></a>
		<% } %>
		</div>
		<div class="app-badges">
		<% for (var i=0; i < badges.length; i++) {  %>
			<a class="badge" href="javascript:void(0)"><i class='icon-certificate icon-white'></i> <%= badges[i] %> </a>
		<% } %>
		</div>
		
	<div class="card-footer">
		<div class="app-category">
			<a href="#"><%= category %></a>
		</div>
		<div class="clearfix">
		<div class="app-like pull-left">
			<i class="icon-heart 
				<% if ( like == false ) { %> 
					icon-gray
				<% } %>
			"></i>
			<%= like_count %>
		</div>
		<div class="app-video pull-right">
			<% if ( video_url != "" ) { %>
				<i class="icon-facetime-video"></i>				 
			<% } %>
		</div>
		</div>
	</div>
</div><!--/#app-<%= id %> -->