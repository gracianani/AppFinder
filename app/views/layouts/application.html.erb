<script type="text/javascript">
  $(function() {
	
	var filters;
	
	$.ajax( {url: 'assets/data/filter.json', dataType: 'text json', success: function(data) {
		filters = data.filters;	
	}, error : function(a,b,c) {console.log(a); console.log(b)}});
	
	var apps;
	$.ajax({ url: 'assets/data/app.json', dataType: 'text json',  success: function(data) {
		apps = data.apps;
	}});
	
	var highlights;
	$.ajax({ url: 'assets/data/highlights.json', dataType: 'text json',  success: function(data) {
		highlights = data;
	}});
	
	
	isLoaded = setInterval( function() {
		if(filters != null && typeof(filters) != 'undefined' && 
		   apps != null && typeof(apps) != 'undefined' &&
		   highlights != null && typeof(highlights) != 'undefined' ) {
			window.clearInterval(isLoaded);
			window.router = new AppFinder.Routers.WaterfallAppsRouter({waterfallApps: apps, filters: filters, highlights: highlights });
	   		Backbone.history.start();
		}
	},2000);
    
  });
</script>

